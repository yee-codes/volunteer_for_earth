<h1>Current Opportunities</h1>
 
<table>
  <tr>
    <th>Organisation</th>
    <th>Title</th>
    <th>Location</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
 
  <% @opportunities.each do |opportunity| %>
    <tr>
      <td><%= opportunity.organisation %></td>
      <td><%= opportunity.title %></td>
      <td><%= opportunity.location %></td>
      <td><%= opportunity.description %></td>
      <td><%= link_to 'Show', opportunity_path(opportunity) %></td>
      <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
      <td><%= link_to 'Delete', opportunity_path(opportunity),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>