<p class="center-text">
  <strong>Organisation:</strong>
  <%= @opportunity.organisation %>
</p>
 
<p class="center-text">
  <strong>Title:</strong>
  <%= @opportunity.title %>
</p>

<p class="center-text">
  <strong>Location:</strong>
  <%= @opportunity.location %>
</p>

<div class="shadow">
    <% if @opportunity.image.attached? %>
        <%= image_tag @opportunity.image, :class => "img-fluid w-75 rounded mx-auto d-block" %>
    <% end %>
</div>

<p class="center-text">
  <strong>Description:</strong>
  <%= @opportunity.description %>
</p>

<% if current_user %>
  <% if current_user.id == @opportunity.user_id %>
  <%= link_to 'Edit', edit_opportunity_path(@opportunity) %>
  <td><%= link_to 'Delete', opportunity_path(@opportunity),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
  <% end %>
<% end %>

<%= link_to 'Back', opportunities_path %>